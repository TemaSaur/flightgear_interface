<Application x:Class="flightgear_interface.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:flightgear_interface"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<Style TargetType="Window">
			<Setter Property="FontStyle" Value="Italic"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Background">
				<Setter.Value>
					<ImageBrush ImageSource="./img/plane_bg.jpg" Stretch="UniformToFill"/>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style TargetType="Button">
			<Setter Property="Background" Value="White"/>
			<Style.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="20"/>
				</Style>
			</Style.Resources>
		</Style>
		<system:Double x:Key="ButtonWidth">120</system:Double>
	</Application.Resources>
</Application>